{
    "train_list"    : "./datasets/data/data_list_for_benchmark_model/train_mos.txt",
    "val_list"      : "./datasets/data/data_list_for_benchmark_model/val_mos.txt",
    "test_list"     : "./datasets/data/data_list_for_benchmark_model/ev_mos.txt",
    "wav_dir"       : "./datasets/data/wav",
    "output_dir"    : "./models/chkpt_benchmark_model",
    "batch_size": 12,
